# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=5050

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/authdb

# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# ============================================
# JWT Configuration
# ============================================
# Generate secure secrets with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your_jwt_access_secret_here_change_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_change_in_production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
# For production, use your actual domain (e.g., https://multi-auth.seifi.dev)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# ============================================
# AWS Configuration
# ============================================
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# ============================================
# Error Tracking (Sentry)
# ============================================
SENTRY_DSN=https://your-sentry-dsn
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
ENABLE_CLOUDWATCH_LOGS=false

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ============================================
# Frontend Configuration
# ============================================
# Development: http://localhost:5050/api
# Production: https://multi-auth.seifi.dev/api
VITE_API_URL=http://localhost:5050/api

# ============================================
# Production Configuration (EC2)
# ============================================
# For production deployment, update these values:
# DATABASE_URL=postgresql://postgres:password@multi-tenant-auth-db.xxxxx.us-east-1.rds.amazonaws.com:5432/authdb
# CORS_ORIGIN=https://multi-auth.seifi.dev,http://multi-auth.seifi.dev,http://13.222.111.119
# ENABLE_CLOUDWATCH_LOGS=true
# RATE_LIMIT_MAX=100
